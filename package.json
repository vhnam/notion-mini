{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "format:php": "prettier --write \"**/*.php\"",
        "format:blade": "prettier --write \"**/*.blade.php\"",
        "format:js": "prettier --write \"**/*.{js,ts,jsx,tsx}\"",
        "format:css": "prettier --write \"**/*.{css,scss,sass}\""
    },
    "devDependencies": {
        "@prettier/plugin-php": "^0.24.0",
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "prettier": "^3.6.2",
        "prettier-plugin-blade": "^2.1.21",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.7"
    }
}
